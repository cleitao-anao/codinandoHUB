{
  "version": 2,
  "builds": [
    {
      "src": "codinando/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "50mb",
        "includeFiles": ["static/**", "media/**", "staticfiles/**"]
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/staticfiles/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/codinando/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "DJANGO_SETTINGS_MODULE": "codinando.settings"
  },
  "buildCommand": "mkdir -p staticfiles && python manage.py collectstatic --noinput"
}
